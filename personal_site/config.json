{
    "global": {
        "title": "Title for all of templates",
        "language": "zh-cn",
        "jumbotron": {
            "fullwidth": true,
            "alignment": "left",
            "tag": "div",
            "_comment_": {
                "fullwidth": "occupies the entire horizontal space of its parent.",
                "tag": "div, section",
                "alignment": "justify, left, right, center"
            }
        },
        "navbar": {
            "id": "navbar",
            "container": true,
            "rounded": false,
            "position": "top",
            "bg_mode_class": "navbar-dark",
            "bg_color_class": "bg-dark",
            "collapse_breakpoint": "md",
            "brand": {
                "title": "Navbar",
                "link": "#",
                "image": {
                    "link": "/img/bootstrap-solid.svg",
                    "width": 30,
                    "height": 30,
                    "alt": "Brand Image"
                }
            },
            "items": [{
                "title": "Home",
                "link": "/"
            },{
                "title": "Gallery - card",
                "link": "/gallery/card.html"
            },{
                "title": "Gallery - thumbnail",
                "link": "/gallery/thumbnail.html"
            }],
            "_comment_": {
                "position": "top, bottom, static",
                "bg-mode-class": "navbar-dark, navbar-light",
                "bg-color-class": "bg-*",
                "collapse-breakpoint": "sm, md, lg, xl",
                "brand": "add title or image, yeah you can add both of them",
                "items": "conflict with items(), please using ['items'] in template"
            }
        },
        "footer": {
            "container": true,
            "border_top": ".05rem solid #e5e5e5"
        },
        "popover": {
            "direction": "right",
            "_comment_": {
                "direction": "left, right, top, bottom"
            }
        },
        "carousel": {
            "id": "carousel-01",
            "fade": false,
            "controls": true,
            "indicators": true,
            "image_class": "d-block w-100",
            "slides": [{
                "active": true,
                "image": "/img/slide1.jpg",
                "title": "First Slide",
                "description": "first slide description"
            },{
                "image": "/img/slide2.jpg",
                "title": "Second Slide",
                "description": "second slide description"
            },{
                "image": "/img/slide3.jpg",
                "title": "Third Slide",
                "description": "third slide description"
            }]
        }
    },
    "local": {
        "gallery": {
            "title": "Title for gallery",
            "jumbotron": {
                "fullwidth": true,
                "alignment": "center",
                "tag": "section"
            },
            "navbar": {
                "position": "static"
            }
        }
    }
